link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css')

if appEnv === 'production'
    link(rel='stylesheet', href='https://ncode.herokuapp.com/static/css/main.css')
else
    link(rel='stylesheet', href='http://localhost:3000/static/css/main.css')

case content
  when 'landing'
    title Five Microservices
  when 'timestamp'
    title Five Microservices - Timestamp Coverter
  when 'header-parser'
    title Five Microservices - Request Header Parser
  when 'file-analyzer'
    title Five Microservices - File Metadata Reader
  when 'url-shortener'
    title Five Microservices - URL Shortener
  when 'image-abstract'
    title Five Microservices - Image Search Abstraction Layer